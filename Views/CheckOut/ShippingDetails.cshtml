@model Art_Gallery.Models.Tbl_Order
@using Art_Gallery.Models;

@{
    ViewBag.Title = "ShippingDetails";

}

<style>


    input[type="radio"] {
        -webkit-appearance: radio;
        margin: 10px;
        position: initial;
        opacity: 1;
    }

    [type=radio]:checked, [type=radio]:not(:checked) {
        position: inherit;
        pointer-events: visiblePainted;
        opacity: 1;
    }
</style>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>



<script type="text/javascript">
    $(document).ready(function () {
        $('input[name=PaymentType]').click(function () {
            if ($('input[name=PaymentType]:checked').val() == "Credit Card" || $('input[name=PaymentType]:checked').val() == "Debit Card") {
                $('#payment').show();
                $('#cc-name').attr("required", "true");
                $('#cc-number').attr("required", "true");
                $('#cc-expiration').attr("required", "true");
                $('#cc-cvv').attr("required", "true");
            } else {
                $('#payment').hide();
            }

        });
    });
</script>

<h2>Shipping Details</h2>


